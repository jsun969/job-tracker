{
	"name": "job-tracker",
	"version": "0.1.0",
	"private": true,
	"packageManager": "pnpm@10.4.1",
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"prepare": "simple-git-hooks",
		"format": "prettier --write \"**/*.{js,ts,tsx,css,md,cjs,mjs,json,html}\"",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:seed": "tsx --env-file=.env.local ./src/db/seed.ts",
		"build:worker": "opennextjs-cloudflare",
		"dev:worker": "wrangler dev --port 8771",
		"preview:worker": "pnpm run build:worker && pnpm run dev:worker",
		"deploy:worker": "pnpm run build:worker && wrangler deploy"
	},
	"dependencies": {
		"@hookform/resolvers": "^4.1.3",
		"@neondatabase/serverless": "^0.10.4",
		"@next/env": "^15.1.7",
		"@radix-ui/react-alert-dialog": "^1.1.6",
		"@radix-ui/react-avatar": "^1.1.3",
		"@radix-ui/react-checkbox": "^1.1.4",
		"@radix-ui/react-collapsible": "^1.1.3",
		"@radix-ui/react-dialog": "^1.1.6",
		"@radix-ui/react-dropdown-menu": "^2.1.6",
		"@radix-ui/react-label": "^2.1.2",
		"@radix-ui/react-select": "^2.1.6",
		"@radix-ui/react-separator": "^1.1.2",
		"@radix-ui/react-slot": "^1.1.2",
		"@radix-ui/react-switch": "^1.1.3",
		"@radix-ui/react-tooltip": "^1.1.8",
		"better-auth": "^1.1.19",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dayjs": "^1.11.13",
		"drizzle-orm": "^0.39.3",
		"drizzle-seed": "^0.3.1",
		"drizzle-valibot": "^0.4.0",
		"lucide-react": "^0.475.0",
		"next": "15.1.7",
		"next-safe-action": "^7.10.4",
		"radash": "^12.1.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-hook-form": "^7.54.2",
		"react-icons": "^5.5.0",
		"sonner": "^2.0.1",
		"tailwind-merge": "^3.0.2",
		"tailwindcss-animate": "^1.0.7",
		"valibot": "1.0.0-rc.3"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@opennextjs/cloudflare": "^0.5.10",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"drizzle-kit": "^0.30.4",
		"eslint": "^9",
		"eslint-config-next": "15.1.7",
		"postcss": "^8",
		"prettier": "^3.5.2",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"pretty-quick": "^4.0.0",
		"simple-git-hooks": "^2.11.1",
		"tailwindcss": "^3.4.1",
		"tsx": "^4.19.3",
		"typescript": "^5"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpx pretty-quick --staged"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"simple-git-hooks"
		]
	}
}
